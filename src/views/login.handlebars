 <div class="login-container">
        <h1>Iniciar sesión</h1>
        <form id="login-form" action="/api/sessions/login" method="post">
            <div>
                <label for="email">Correo electrónico</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div>
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit">Iniciar sesión</button>
            <button><a class="github" href="/api/sessions/github"><i class="bi bi-github"></i> Entrar con GitHub</a></button>
            <div>
                <button><a href="/register">Registrarse</a></button>
                <button><a href="/restore">Restaurar contraseña</a></button>
            </div>
        </form>
    </div>

    <script src="/js/login.js"></script>